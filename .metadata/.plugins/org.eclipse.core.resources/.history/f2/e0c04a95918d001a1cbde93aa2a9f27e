package com.sfofana.app.controller;

import java.io.File;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.multipart.MultipartFile;

import com.amazonaws.services.s3.transfer.Upload;
import com.sfofana.app.model.Compare;
import com.sfofana.app.service.UserService;

@RestController
@RequestMapping("/api/v1")
public class UserController {

	@Autowired
	UserService service;
	
	@PostMapping("compare")
	public Object compareFaces(@RequestBody Compare faces) {
		return service.compareFacesResults(faces);
	}
	
	@PostMapping("upload")
	public Object uploadImage(@RequestBody Upload file) {
		return service.processImageUpload(file);
	}
}
